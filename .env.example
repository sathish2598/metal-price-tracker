# Email Configuration (Resend - Free tier: 100 emails/day)
RESEND_API_KEY=re_your_api_key_here

# Notification Recipients
EMAIL_TO=your-email@example.com
PHONE_NUMBER=+911234567890

# SMS Configuration (Textbelt - Free tier: 1 SMS/day for testing)
# For production, consider Twilio trial (has free credits)
TEXTBELT_KEY=textbelt

# Alert Thresholds (percentage drop from baseline)
ALERT_10_PERCENT=true
ALERT_20_PERCENT=true

# Baseline prices (auto-set on first run, or set manually)
# Leave empty to auto-capture on first run
GOLD_BASELINE_PRICE=
SILVER_BASELINE_PRICE=

# Check interval in minutes (default: 30)
CHECK_INTERVAL_MINUTES=30
